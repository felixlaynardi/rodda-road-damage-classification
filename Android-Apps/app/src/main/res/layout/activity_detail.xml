            tools:background="@color/red_pressed" />

        <TextView
            android:id="@+id/tv_predictions4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/_14sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="@id/img_details4"
            app:layout_constraintStart_toStartOf="@id/img_details4"
            app:layout_constraintTop_toBottomOf="@id/img_details4"
            tools:text="Cracked" />

        <TextView
