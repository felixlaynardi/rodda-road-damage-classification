            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:maxLength="15"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/roboto"
            app:layout_constraintEnd_toEndOf="@id/tv_predictions2"
            app:layout_constraintStart_toStartOf="@id/tv_predictions2"
            app:layout_constraintTop_toBottomOf="@id/tv_predictions2"
            tools:text="Accuracy 1.000%" />

        <ImageView
            android:id="@+id/img_details3"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_predictions_acc1"
            tools:background="@color/red_pressed" />

