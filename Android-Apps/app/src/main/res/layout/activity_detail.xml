<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp"
        tools:context=".ui.detail.DetailTrialActivity">

        <ImageView
            android:id="@+id/img_details1"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_location"
            tools:background="@color/red_pressed" />

        <TextView
            android:id="@+id/tv_predictions1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/_14sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="@id/img_details1"
            app:layout_constraintStart_toStartOf="@id/img_details1"
            app:layout_constraintTop_toBottomOf="@id/img_details1"
            tools:text="Cracked" />

        <TextView
            android:id="@+id/tv_predictions_acc1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/_10ssp"
            android:maxLength="15"
            app:layout_constraintEnd_toEndOf="@id/tv_predictions1"
            app:layout_constraintStart_toStartOf="@id/tv_predictions1"
            app:layout_constraintTop_toBottomOf="@id/tv_predictions1"
            tools:text="Accuracy 1.000%" />

        <ImageView
            android:id="@+id/img_details2"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_details1"
            tools:background="@color/red_pressed" />

        <TextView
            android:id="@+id/tv_predictions2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/_10ssp"
            android:layout_marginStart="@dimen/_14sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="@id/img_details2"
            app:layout_constraintStart_toStartOf="@id/img_details2"
            app:layout_constraintTop_toBottomOf="@id/img_details2"
