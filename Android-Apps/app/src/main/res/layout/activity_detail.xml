            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:maxLength="15"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="@id/tv_predictions4"
            app:layout_constraintStart_toStartOf="@id/tv_predictions4"
