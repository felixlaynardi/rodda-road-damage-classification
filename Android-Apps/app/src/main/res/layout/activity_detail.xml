            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:textColor="@color/black"
            android:maxLength="15"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/roboto"
            app:layout_constraintEnd_toEndOf="@id/tv_predictions3"
            app:layout_constraintStart_toStartOf="@id/tv_predictions3"
            app:layout_constraintTop_toBottomOf="@id/tv_predictions3"
            tools:text="Accuracy 1.000%" />

        <ImageView
            android:id="@+id/img_details4"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            app:layout_constraintEnd_toEndOf="parent"
